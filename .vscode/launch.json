    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Electron Main",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron-forge-vscode-nix",          // issue fix: https://github.com/electron/forge/issues/1369#issuecomment-601470114
